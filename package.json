{
  "name": "opal",
  "version": "0.0.1",
  "description": "peer-to-peer, collaborative states using merkle-crdts",
  "main": "src/index.js",
  "type": "module",
  "prettier": "prettier-config-standard",
  "scripts": {
    "prepare": "ts-patch install -s",
    "lint": "eslint src test",
    "style": "prettier -w src test && eslint --fix src test",
    "build": "tsc",
    "test": "npm run clean && c8 -c ./test/.c8rc.json npx mocha --config ./test/.mocharc.json ; npm run clean",
    "clean": "git add test/fixtures && git stash -- test/fixtures && git stash drop ; rm -rf test/temp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cypsela/odb.git"
  },
  "keywords": [
    "peer-to-peer",
    "ipfs",
    "ipld",
    "merkle-crdt"
  ],
  "author": "tabcat <tabcat00@proton.me>",
  "bugs": {
    "url": "https://github.com/cypsela/odb/issues"
  },
  "homepage": "https://github.com/cypsela/odb#readme",
  "devDependencies": {
    "@microsoft/api-documenter": "^7.19.25",
    "@microsoft/api-extractor": "^7.33.6",
    "@types/mocha": "^10.0.0",
    "c8": "^7.12.0",
    "eslint": "^8.23.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-tsdoc": "^0.2.17",
    "json": "^11.0.0",
    "mocha": "^10.1.0",
    "polendina": "^3.1.0",
    "prettier": "^2.7.1",
    "prettier-config-standard": "^5.0.0",
    "ts-node": "^10.9.1",
    "ts-patch": "^2.0.2",
    "typescript": "^4.8.4",
    "typescript-transform-paths": "^3.4.4"
  },
  "dependencies": {
    "ipfs-core": "^0.17.0",
    "ipld-hashmap": "^2.1.13",
    "make-dir": "^3.1.0"
  }
}
