{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "importsNotUsedAsValues": "error",
    "outDir": "dist",
    "experimentalDecorators": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",

    "paths": {
      "~access/*": ["src/access/*"],
      "~blocks/*": ["src/blocks/*"],
      "~entry/*": ["src/entry/*"],
      "~identity/*": ["src/identity/*"],
      "~keychain/*": ["src/keychain/*"],
      "~manifest/*": ["src/manifest/*"],
      "~pubsub/*": ["src/pubsub/*"],
      "~replica/*": ["src/replica/*"],
      "~replicator/*": ["src/replicator/*"],
      "~storage/*": ["src/storage/*"],
      "~store/*": ["src/store/*"],
      "~utils/*": ["src/utils/*"]
    },

    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },

  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "benchmark/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "<node_internals>/**",
    "dist"
  ],

  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "require": [ "typescript-transform-paths/register" ]
  }
}
